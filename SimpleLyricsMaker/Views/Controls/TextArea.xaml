<UserControl
    x:Class="SimpleLyricsMaker.Views.Controls.TextArea"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleLyricsMaker.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <TextBox x:Name="Root_TextBox" Text="{x:Bind Text, Mode=TwoWay}" Header="{x:Bind Header, Mode=OneWay}" PlaceholderText="{x:Bind PlaceholderText, Mode=OneWay}" AcceptsReturn="True"/>
</UserControl>
